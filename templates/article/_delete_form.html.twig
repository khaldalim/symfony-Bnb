<form method="post" action="{{ path('article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.slug) }}">
    <button class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i> Supprimer</button>
</form>
