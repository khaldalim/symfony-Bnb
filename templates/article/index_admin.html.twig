{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}

	<h1 style="text-align:center">Article index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
                <th>slug</th>
                <th>image de presentation</th>
				<th>Content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.title }}</td>
					<td>{{ article.description }}</td>
					<td>{{ article.slug }}</td>
                    <td><img src="{{ article.coverImage }}" alt="image de couverture" style="width:200px"></td>
					<td>{{ article.content | raw }}</td>
					<td>
						<a class="btn btn-primary my-1" href="{{ path('article_show', {'slug': article.slug}) }}"><i class="fa fa-eye" aria-hidden="true"></i>
 Voir</a><br>
						<a class="btn btn-success my-1" href="{{ path('article_edit', {'slug': article.slug}) }}"><i class="fa fa-pencil" aria-hidden="true"></i> Modifier</a>
						{{ include('article/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas de resultats</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('article_new') }}">Cr√©er un nouvel article</a>


{% endblock %}
